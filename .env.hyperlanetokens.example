# === ACCOUNT ===
# Your private key (without 0x prefix for some tools)
PRIVATE_KEY=0x...

# === HYPERLANE INFRASTRUCTURE ===
# Hyperlane Mailbox addresses
# Get from: https://explorer.hyperlane.xyz/ or your deployment
MAILBOX_BASE=0x...
MAILBOX_MANTLE=0x...

# Interchain Gas Paymaster (Optional - for paying destination gas)
INTERCHAIN_GAS_PAYMASTER=0x...
# Leave as 0x if not using IGP

# Interchain Security Module (Optional - for additional security)
INTERCHAIN_SECURITY_MODULE=0x...
# Leave as 0x if not using ISM

# === TOKEN CONFIGURATION ===
# Token owner address (default: deployer address)
OWNER=0x...

# Initial supply for all tokens (in wei/smallest unit)
# Example: 1,000,000 tokens = 1000000000000000000000000 (18 decimals)
INITIAL_SUPPLY=1000000000000000000000000

# === RPC URLs ===
BASE_RPC_URL=https://sepolia.base.org
MANTLE_RPC_URL=https://rpc.sepolia.mantle.xyz

# === EXPLORER API KEYS ===
BASESCAN_API_KEY=your_base_api_key_here
MANTLESCAN_API_KEY=your_mantle_api_key_here
